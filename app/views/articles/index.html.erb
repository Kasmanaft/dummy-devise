<% @articles.each do |article| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to article.title, article_path(article) %></h3>
    </div>
    <div class="panel-body">
      <%= truncate(article.body, length: 500) %>
      
    </div>
  </div>  
        
     
<% end %>
